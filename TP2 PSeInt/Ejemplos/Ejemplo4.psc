Algoritmo ejemplo4
	
	Definir a Como Caracter;
	
	Escribir "Ingrese el caracter: ";
	Leer a;
	
	Segun a Hacer 
		
		'a' o 'A' :
            Escribir "Ingreso la vocal A";
		'e' o 'E' :
            Escribir "Ingreso la vocal E";
		'o' o 'O' :
            Escribir "Ingreso la vocal O";
		'u' o 'U' :
            Escribir "Ingreso la vocal U";
		'i' o 'I' :
            Escribir "Ingreso la vocal I";
			
		De Otro Modo: 
            Escribir "No se ha ingresado una vocal";
	FinSegun
	
FinAlgoritmo